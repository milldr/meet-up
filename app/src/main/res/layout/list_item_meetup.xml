<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_meetup_attending_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_meetup_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_meetup_attending_checkbox"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="Meetup Name"/>

    <TextView
        android:id="@+id/list_item_meetup_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_meetup_attending_checkbox"
        android:layout_below="@+id/list_item_meetup_attending_checkbox"
        android:padding="4dp"
        tools:text="Meetup Date"/>

</RelativeLayout>